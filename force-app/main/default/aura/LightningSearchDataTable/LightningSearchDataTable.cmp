<aura:component implements = "flexipage:availableForAllPageTypes" access="global" controller="LightningSearchDataTableController">
    
    <!-- attributes -->
    <aura:attribute name="data" type="Map"/>
    <aura:attribute name="filteredData" type="Map"/>
    <aura:attribute name="accountIndustry" type="String"/>
    <aura:attribute name="accountName" type="String"/>
    <aura:attribute name="columns" type="List"/>
    <aura:attribute name="searchedFields" type="Object"/>

    <!-- handlers-->
    <aura:handler name="init" value="{!this }" action="{!c.init }"/>
		
    	<span>
        	<lightning:input 
                onchange="{!c.searchTable}" 
                type="search" 
                label="Industry" 
                name = "industry"
                variant="label-hidden"               
                placeholder="Enter the account's industry" 
                aura:id="firstNameField"
            />
        	<lightning:input 
                onchange="{!c.searchTable}" 
                type="search" 
                label="Account Name" 
                name = "name"
                variant="label-hidden"              
                placeholder="Enter the account name" 
                aura:id="secondNameField"
            />
        </span>
    	<br/>

        <lightning:datatable
            columns="{!v.columns}"
            data="{!v.filteredData}"
            keyField="id"            
        />
    
</aura:component>